        <span class="ruby-ivar">@id</span> = <span class="ruby-identifier">info</span>[<span class="ruby-string">&quot;id_user&quot;</span>]
        <span class="ruby-identifier">token</span> = <span class="ruby-keyword">self</span>.<span class="ruby-identifier">genToken</span>
